{
  "manifest_version": 3,
  "name": "LinkedIn Knowledge Base Saver",
  "version": "1.1",
  "description": "Right-click to save LinkedIn posts to Google Sheets via Gemini.",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {}
}